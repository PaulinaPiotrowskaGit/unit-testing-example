{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "plugins": ["wdio", "mocha"],
  "extends": ["airbnb-base", "prettier", "plugin:wdio/recommended", "plugin:mocha/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
    "rules": {
        "wdio/no-pause": "off",
        "mocha/no-mocha-arrows": "off",
        "class-methods-use-this": "off",
        "no-console": "off",
        "prefer-arrow-callback": "off",
        "func-names": "off",
        "no-shadow": "off",
        "no-param-reassign": "off",
        "prefer-template": "off",
        "require-jsdoc" : 0,
        "indent": "off",
        "linebreak-style": 0,
        "space-before-function-paren": "off",
        "max-len": ["error", { "code": 120 }],
        "arrow-parens": ["error", "as-needed"],
        "valid-jsdoc": ["error", { "requireReturn": false }]
    },
    "ignorePatterns": ["/module-9/service/*", "**/coverage", "**/mochawesome-report", "**/artifacts", "**/report"]
}
